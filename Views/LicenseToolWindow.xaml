<Window x:Class="SnookerGameManagementSystem.Views.LicenseToolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="License and MAC Address Tool" 
        Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   TextWrapping="Wrap"
                   FontSize="14"
                   Margin="0,0,0,20"
                   Text="License Tool - MAC Address Information&#x0a;&#x0a;Use this tool to:&#x0a;- View this machine's MAC addresses&#x0a;- Generate license keys for clients&#x0a;- Test license validation"/>

        <Border Grid.Row="1" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="5"
                Padding="15"
                Background="#F9F9F9">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="MacAddressPanel">
                    <TextBlock Text="Loading MAC addresses..." 
                               FontStyle="Italic"
                               Foreground="Gray"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,20,0,10">
            <Button Content="Refresh MAC Addresses" 
                    Click="RefreshButton_Click"
                    Width="160"
                    Height="35"
                    Margin="0,0,10,0"/>

            <Button Content="Copy to Clipboard" 
                    Click="CopyButton_Click"
                    Width="160"
                    Height="35"/>
        </StackPanel>

        <Button Grid.Row="3" 
                Content="Close" 
                Click="CloseButton_Click"
                Width="100"
                Height="35"
                HorizontalAlignment="Center"/>
    </Grid>
</Window>
