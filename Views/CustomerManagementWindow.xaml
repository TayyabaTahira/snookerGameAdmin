<Window x:Class="SnookerGameManagementSystem.Views.CustomerManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:SnookerGameManagementSystem.Converters"
        mc:Ignorable="d"
        Title="Customer Management" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a2e">

    <Window.Resources>
        <converters:GreaterThanConverter x:Key="GreaterThanConverter"/>
        
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#e94560"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#d83551"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PaymentButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2196f3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>

        <Style x:Key="EditButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#4caf50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>

        <Style x:Key="DeleteButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#e94560"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <Style x:Key="HistoryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2196f3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>

        <Style x:Key="SearchTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3a3a4e"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Customer Management" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White"
                          Margin="0,0,0,5"/>
                <TextBlock Text="Manage customer accounts and outstanding amounts" 
                          FontSize="12" 
                          Foreground="#a0a0b0"/>
            </StackPanel>

            <Button Grid.Column="1"
                   Content="+ Add Customer"
                   Style="{StaticResource PrimaryButton}"
                   Command="{Binding AddCustomerCommand}"/>
        </Grid>

        <!-- Search Bar -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <TextBox Style="{StaticResource SearchTextBox}"
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                    VerticalContentAlignment="Center">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <TextBlock Text="ðŸ” Search customers by name or phone..."
                      FontSize="14"
                      Foreground="#6a6a7e"
                      IsHitTestVisible="False"
                      VerticalAlignment="Center"
                      Margin="15,0,0,0">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SearchText}" Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding SearchText}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>

        <!-- Customer List -->
        <Border Grid.Row="2"
               Background="#16213e"
               BorderBrush="#3a3a4e"
               BorderThickness="2"
               CornerRadius="8"
               Padding="0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FilteredCustomers}" Margin="0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#0f3460"
                                   BorderBrush="#3a3a4e"
                                   BorderThickness="0,0,0,1"
                                   Padding="25,18">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Name -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding FullName}" 
                                                  FontSize="16" 
                                                  FontWeight="Bold"
                                                  Foreground="White"/>
                                        <TextBlock Text="{Binding Phone}" 
                                                  FontSize="12" 
                                                  Foreground="#a0a0b0"
                                                  Margin="0,3,0,0"/>
                                    </StackPanel>

                                    <!-- Outstanding Amount -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock FontSize="14" 
                                                  FontWeight="SemiBold"
                                                  VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#4caf50"/>
                                                    <Setter Property="Text" Value="{Binding Balance, StringFormat='PKR {0:N2}'}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Balance, Converter={StaticResource GreaterThanConverter}, ConverterParameter=0}" Value="True">
                                                            <Setter Property="Foreground" Value="#ff9800"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock FontSize="10" 
                                                  Foreground="#a0a0b0"
                                                  Text="(pending payment)"
                                                  Margin="0,2,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Balance, Converter={StaticResource GreaterThanConverter}, ConverterParameter=0}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Created Date -->
                                    <TextBlock Grid.Column="2"
                                              Text="{Binding CreatedAt, StringFormat='d'}" 
                                              FontSize="12" 
                                              Foreground="#a0a0b0"
                                              VerticalAlignment="Center"/>

                                    <!-- Actions -->
                                    <StackPanel Grid.Column="3" 
                                               Orientation="Horizontal"
                                               VerticalAlignment="Center">
                                        <Button Content="ðŸ“œ History"
                                               Style="{StaticResource HistoryButton}"
                                               Command="{Binding DataContext.ViewHistoryCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                               CommandParameter="{Binding}"/>
                                        <Button Content="ðŸ’° Pay"
                                               Style="{StaticResource PaymentButton}"
                                               Command="{Binding DataContext.MakePaymentCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                               CommandParameter="{Binding}"/>
                                        <Button Content="âœï¸ Edit"
                                               Style="{StaticResource EditButton}"
                                               Command="{Binding DataContext.EditCustomerCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                               CommandParameter="{Binding}"/>
                                        <Button Content="ðŸ—‘ï¸ Delete"
                                               Style="{StaticResource DeleteButton}"
                                               Command="{Binding DataContext.DeleteCustomerCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                               CommandParameter="{Binding}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
