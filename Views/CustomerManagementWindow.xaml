<Window x:Class="SnookerGameManagementSystem.Views.CustomerManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Customer Management" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a2e">

    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#e94560"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#d83551"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PaymentButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2196f3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>

        <Style x:Key="EditButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#4caf50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>

        <Style x:Key="DeleteButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#e94560"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Customer Management" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White"
                          Margin="0,0,0,5"/>
                <TextBlock Text="Manage customer accounts and balances" 
                          FontSize="12" 
                          Foreground="#a0a0b0"/>
            </StackPanel>

            <Button Grid.Column="1"
                   Content="+ Add Customer"
                   Style="{StaticResource PrimaryButton}"
                   Command="{Binding AddCustomerCommand}"/>
        </Grid>

        <!-- Customer List -->
        <Border Grid.Row="1"
               Background="#16213e"
               BorderBrush="#3a3a4e"
               BorderThickness="2"
               CornerRadius="8"
               Padding="0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Customers}" Margin="0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#0f3460"
                                   BorderBrush="#3a3a4e"
                                   BorderThickness="0,0,0,1"
                                   Padding="20,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Name -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding FullName}" 
                                                  FontSize="16" 
                                                  FontWeight="Bold"
                                                  Foreground="White"/>
                                        <TextBlock Text="{Binding Phone}" 
                                                  FontSize="12" 
                                                  Foreground="#a0a0b0"
                                                  Margin="0,3,0,0"/>
                                    </StackPanel>

                                    <!-- Balance -->
                                    <TextBlock Grid.Column="1"
                                              Text="{Binding Balance, StringFormat='PKR {0:N2}'}" 
                                              FontSize="14" 
                                              Foreground="#4caf50"
                                              VerticalAlignment="Center"/>

                                    <!-- Created Date -->
                                    <TextBlock Grid.Column="2"
                                              Text="{Binding CreatedAt, StringFormat='d'}" 
                                              FontSize="12" 
                                              Foreground="#a0a0b0"
                                              VerticalAlignment="Center"/>

                                    <!-- Actions -->
                                    <StackPanel Grid.Column="3" 
                                               Orientation="Horizontal"
                                               VerticalAlignment="Center">
                                        <Button Content="ðŸ’° Pay"
                                               Style="{StaticResource PaymentButton}"
                                               Command="{Binding DataContext.MakePaymentCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                               CommandParameter="{Binding}"/>
                                        <Button Content="âœï¸ Edit"
                                               Style="{StaticResource EditButton}"
                                               Command="{Binding DataContext.EditCustomerCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                               CommandParameter="{Binding}"/>
                                        <Button Content="ðŸ—‘ï¸ Delete"
                                               Style="{StaticResource DeleteButton}"
                                               Command="{Binding DataContext.DeleteCustomerCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                               CommandParameter="{Binding}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
