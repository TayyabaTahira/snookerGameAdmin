<Window x:Class="SnookerGameManagementSystem.Views.TableDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding TableName}" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#1a1a2e"
        ResizeMode="CanResize"
        MinHeight="600"
        MinWidth="800">

    <Window.Resources>
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#e94560"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#d83551"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#b82841"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SmallButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#e94560"/>
            <Setter Property="BorderBrush" Value="#e94560"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#e94560"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3a3a4e"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Delete Button -->
        <Border Grid.Row="0" Background="#0f3460" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding TableName}" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="White"/>
                    <TextBlock Text="{Binding GameTypeName}" 
                              FontSize="14" 
                              Foreground="#e94560"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,0">
                    <TextBlock Text="{Binding ElapsedTimeDisplay}" 
                              FontSize="32" 
                              FontWeight="Bold" 
                              Foreground="White"
                              HorizontalAlignment="Right"/>
                    <TextBlock Text="Elapsed Time" 
                              FontSize="12" 
                              Foreground="#a0a0b0"
                              HorizontalAlignment="Right"/>
                </StackPanel>

                <Button Grid.Column="2"
                       Content="Delete Table"
                       Background="#d83551"
                       Foreground="White"
                       BorderThickness="0"
                       Padding="15,8"
                       Cursor="Hand"
                       Command="{Binding DeleteTableCommand}"
                       VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Content with proper scrolling -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="30">
                <!-- Players Section with Add/Remove -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                              Text="Players" 
                              FontSize="18" 
                              FontWeight="SemiBold" 
                              Foreground="White"
                              VerticalAlignment="Center"/>
                    
                    <Button Grid.Column="1"
                           Content="+ Add Player"
                           Style="{StaticResource SmallButton}"
                           Command="{Binding AddPlayerCommand}"/>
                </Grid>

                <Border Background="#16213e"
                       BorderBrush="#3a3a4e"
                       BorderThickness="2"
                       CornerRadius="8"
                       Padding="25"
                       MinHeight="150"
                       Margin="0,0,0,25">
                    <Grid>
                        <!-- Empty state -->
                        <TextBlock Text="No players added yet. Click 'Add Player' to add players."
                                  FontSize="14"
                                  Foreground="#6a6a7e"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Visibility="{Binding HasNoPlayers, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <!-- Players list -->
                        <ItemsControl ItemsSource="{Binding Players}"
                                     Visibility="{Binding HasPlayers, Converter={StaticResource BoolToVisibilityConverter}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#0f3460"
                                           BorderBrush="#3a3a4e"
                                           BorderThickness="1"
                                           CornerRadius="6"
                                           Padding="18"
                                           Margin="0,0,0,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                      Text="{Binding Name}"
                                                      FontSize="16"
                                                      Foreground="White"
                                                      VerticalAlignment="Center"/>

                                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,15,0">
                                                <TextBlock Text="Win Streak: "
                                                          FontSize="14"
                                                          Foreground="#a0a0b0"
                                                          VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding WinStreak}"
                                                          FontSize="16"
                                                          Foreground="#e94560"
                                                          FontWeight="Bold"
                                                          VerticalAlignment="Center"
                                                          Margin="5,0,0,0"/>
                                            </StackPanel>

                                            <Button Grid.Column="2"
                                                   Content="Remove"
                                                   Background="Transparent"
                                                   Foreground="#d83551"
                                                   BorderBrush="#d83551"
                                                   BorderThickness="1"
                                                   Padding="8,4"
                                                   Cursor="Hand"
                                                   FontSize="12"
                                                   Command="{Binding DataContext.RemovePlayerCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                   CommandParameter="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <!-- Frames Section -->
                <TextBlock Text="Frames Played" 
                          FontSize="18" 
                          FontWeight="SemiBold" 
                          Foreground="White"
                          Margin="0,10,0,10"/>

                <Border Background="#16213e"
                       BorderBrush="#3a3a4e"
                       BorderThickness="2"
                       CornerRadius="8"
                       Padding="35"
                       Margin="0,0,0,25">
                    <TextBlock Text="{Binding FrameCount}" 
                              FontSize="64" 
                              FontWeight="Bold" 
                              Foreground="#e94560"
                              HorizontalAlignment="Center"/>
                </Border>

                <!-- Session Info -->
                <Border Background="#16213e"
                       BorderBrush="#3a3a4e"
                       BorderThickness="2"
                       CornerRadius="8"
                       Padding="25"
                       Margin="0,0,0,25">
                    <StackPanel>
                        <TextBlock Text="Session Information" 
                                  FontSize="16" 
                                  FontWeight="SemiBold" 
                                  Foreground="White"
                                  Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Started At:" Foreground="#a0a0b0" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding StartedAt}" Foreground="White" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Game Type:" Foreground="#a0a0b0" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding GameTypeName}" Foreground="White" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Status:" Foreground="#a0a0b0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="In Progress" Foreground="#4ade80" FontWeight="SemiBold"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons with proper icons -->
        <Border Grid.Row="2" Background="#0f3460" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                       Content="End Game"
                       Style="{StaticResource DangerButton}"
                       Command="{Binding EndGameCommand}"
                       ToolTip="End current game and show billing"/>

                <Button Grid.Column="1"
                       Content="Next Frame"
                       Style="{StaticResource ActionButton}"
                       Command="{Binding NextFrameCommand}"
                       ToolTip="Start next frame"/>

                <Button Grid.Column="2"
                       Content="Quit Session"
                       Style="{StaticResource DangerButton}"
                       Command="{Binding QuitSessionCommand}"
                       ToolTip="End and close this session"/>
            </Grid>
        </Border>
    </Grid>
</Window>
