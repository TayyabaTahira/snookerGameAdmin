<Window x:Class="SnookerGameManagementSystem.Views.EndGameBillingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnookerGameManagementSystem.Converters"
        mc:Ignorable="d"
        Title="End Game - Session Billing" 
        Height="750" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#1a1a2e"
        ResizeMode="NoResize">

    <Window.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3a3a4e"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3a3a4e"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                        Focusable="false"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="{TemplateBinding BorderThickness}"
                                               CornerRadius="4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="32"/>
                                                </Grid.ColumnDefinitions>
                                                <Path Grid.Column="1"
                                                     Fill="White"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Data="M 0 0 L 4 4 L 8 0 Z"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Background" Value="#16213e"/>
                                        <Setter Property="BorderBrush" Value="#3a3a4e"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                            IsHitTestVisible="False"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                            Margin="10,0,32,0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"/>
                            <TextBlock x:Name="PlaceholderText"
                                       Margin="10,0,32,0"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Foreground="#6a6a7e"
                                       FontStyle="Italic"
                                       FontSize="14"
                                       Text="{TemplateBinding Tag}"
                                       IsHitTestVisible="False"
                                       Visibility="Collapsed"/>
                            <Popup x:Name="Popup"
                                 Placement="Bottom"
                                 IsOpen="{TemplateBinding IsDropDownOpen}"
                                 AllowsTransparency="True"
                                 Focusable="False"
                                 PopupAnimation="Slide">
                                <Grid x:Name="DropDown"
                                    SnapsToDevicePixels="True"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="200">
                                    <Border x:Name="DropDownBorder"
                                          Background="#16213e"
                                          BorderBrush="#3a3a4e"
                                          BorderThickness="2"
                                          CornerRadius="4"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="False">
                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95"/>
                            </Trigger>
                            <Trigger Property="SelectedItem" Value="{x:Null}">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="SelectedItem" Value="{x:Null}">
                    <Setter Property="Foreground" Value="#6a6a7e"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="ItemBorder"
                               Background="{TemplateBinding Background}"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#5A8FA0"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#5A8FA0"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#5A8FA0"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#5A8FA0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4D6A92"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#a0a0b0"/>
            <Setter Property="BorderBrush" Value="#3a3a4e"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#5A8FA0"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="End Game - Session Billing" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="White"
                      Margin="0,0,0,5"/>
            <TextBlock Text="Review all frames and finalize session charges" 
                      FontSize="12" 
                      Foreground="#a0a0b0"/>
        </StackPanel>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly">
            <StackPanel>
                <!-- Session Summary -->
                <Border Background="#16213e"
                       BorderBrush="#3a3a4e"
                       BorderThickness="2"
                       CornerRadius="6"
                       Padding="20"
                       Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Session Summary" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Frames:" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TotalFrames}" FontWeight="Bold"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Total Duration:" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SessionDuration}" FontWeight="Bold"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Base Charges:" Margin="0,0,10,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding BaseRateTotalDisplay}" FontWeight="Bold" Foreground="#4caf50"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Frame Details -->
                <TextBlock Text="Frames Played" FontWeight="Bold" FontSize="16" Margin="0,10,0,10"/>
                <Border Background="#16213e"
                       BorderBrush="#3a3a4e"
                       BorderThickness="2"
                       CornerRadius="6"
                       Padding="15"
                       Margin="0,0,0,15"
                       MaxHeight="200">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding FrameSummaries}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#0f3460"
                                           BorderBrush="#2a2a3e"
                                           BorderThickness="1"
                                           CornerRadius="4"
                                           Padding="12"
                                           Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                                      Text="{Binding FrameNumber, StringFormat='Frame {0}'}" 
                                                      FontWeight="Bold" 
                                                      Foreground="#5A8FA0"
                                                      Margin="0,0,15,5"/>
                                            
                                            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                                                <TextBlock Foreground="#a0a0b0" FontSize="12">
                                                    <Run Text="Duration: "/>
                                                    <Run Text="{Binding Duration}" Foreground="White"/>
                                                    <Run Text=" | Winner: "/>
                                                    <Run Text="{Binding Winner}" Foreground="#4caf50"/>
                                                    <Run Text=" | Loser: "/>
                                                    <Run Text="{Binding Loser}" Foreground="#ff6b6b"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <TextBlock Grid.Row="0" Grid.Column="2" Grid.RowSpan="2"
                                                      Text="{Binding BaseRateDisplay}" 
                                                      FontWeight="Bold" 
                                                      Foreground="#4caf50"
                                                      VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Additional Session Charges -->
                <TextBlock Text="Additional Session Charges" FontWeight="Bold" FontSize="16" Margin="0,10,0,10"/>
                
                <!-- Overtime -->
                <TextBlock Text="Overtime Minutes" Margin="0,0,0,5"/>
                <TextBox Text="{Binding OvertimeMinutes, UpdateSourceTrigger=PropertyChanged}" 
                        Margin="0,0,0,15"/>

                <!-- Overtime Amount -->
                <TextBlock Text="Overtime Amount (PKR)" Margin="0,0,0,5"/>
                <TextBox Text="{Binding OvertimeAmount, UpdateSourceTrigger=PropertyChanged}" 
                        Margin="0,0,0,15"/>

                <!-- Fine -->
                <TextBlock Text="Lump Sum Fine (PKR)" Margin="0,0,0,5"/>
                <TextBox Text="{Binding LumpSumFine, UpdateSourceTrigger=PropertyChanged}" 
                        Margin="0,0,0,15"/>

                <!-- Discount -->
                <TextBlock Text="Discount (PKR)" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Discount, UpdateSourceTrigger=PropertyChanged}" 
                        Margin="0,0,0,15"/>

                <!-- Total -->
                <Border Background="#16213e"
                       BorderBrush="#5A8FA0"
                       BorderThickness="2"
                       CornerRadius="6"
                       Padding="20"
                       Margin="0,15,0,20">
                    <Grid>
                        <TextBlock Text="Total Session Amount:" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Text="{Binding TotalAmountDisplay}" 
                                  FontSize="20" 
                                  FontWeight="Bold" 
                                  Foreground="#4caf50"
                                  HorizontalAlignment="Right"/>
                    </Grid>
                </Border>

                <!-- Payer Mode -->
                <TextBlock Text="Who Pays?" FontWeight="Bold" Margin="0,10,0,5"/>
                <ComboBox ItemsSource="{Binding PayerModes}"
                         SelectedItem="{Binding SelectedPayerMode}"
                         DisplayMemberPath="Display"
                         SelectedValuePath="Value"
                         Margin="0,0,0,10"
                         Tag="Select Who Pays"/>

                <!-- Who Will Pay Display -->
                <Border Background="#16213e"
                       BorderBrush="#A2C6E9"
                       BorderThickness="2"
                       CornerRadius="6"
                       Padding="15"
                       Margin="0,0,0,15">
                    <TextBlock Text="{Binding WhoWillPayDisplay}" 
                              FontSize="13" 
                              Foreground="#A2C6E9"
                              TextWrapping="Wrap"/>
                </Border>

                <!-- Payment Status -->
                <TextBlock Text="Payment Status" FontWeight="Bold" Margin="0,10,0,5"/>
                <ComboBox ItemsSource="{Binding PayStatuses}"
                         SelectedItem="{Binding SelectedPayStatus}"
                         DisplayMemberPath="Display"
                         SelectedValuePath="Value"
                         Margin="0,0,0,15"
                         Tag="Select Payment Status"/>

                <!-- Partial Payment Amount (visible only when PARTIAL is selected) -->
                <StackPanel Visibility="{Binding IsPartialPaymentVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="0,0,0,15">
                    <TextBlock Text="Partial Payment Amount (PKR)" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding PartialPaymentAmount, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="Enter the amount being paid now (remaining will be added as credit)" 
                              FontSize="11" 
                              Foreground="#a0a0b0"
                              Margin="0,5,0,0"
                              TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Payment Method (visible when Paid Now or Partial is selected) -->
                <StackPanel Visibility="{Binding IsPaymentMethodVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="0,0,0,15">
                    <TextBlock Text="Payment Method" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding PaymentMethods}"
                             SelectedItem="{Binding SelectedPaymentMethod}"
                             Tag="How was payment received?"/>
                    <TextBlock Text="Select how the payment was received (Cash, Bank Transfer, EasyPaisa, JazzCash, etc.)" 
                              FontSize="11" 
                              Foreground="#a0a0b0"
                              Margin="0,5,0,0"
                              TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                   Content="Cancel"
                   Style="{StaticResource SecondaryButton}"
                   Width="100"
                   Margin="0,0,10,0"
                   Click="Cancel_Click"/>

            <Button Grid.Column="2"
                   Content="Confirm and End Session"
                   Style="{StaticResource PrimaryButton}"
                   Width="180"
                   Click="EndGame_Click"/>
        </Grid>
    </Grid>
</Window>
