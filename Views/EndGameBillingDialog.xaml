<Window x:Class="SnookerGameManagementSystem.Views.EndGameBillingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnookerGameManagementSystem.Converters"
        mc:Ignorable="d"
        Title="End Game - Billing" 
        Height="650" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#1a1a2e"
        ResizeMode="NoResize">

    <Window.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3a3a4e"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <!-- ComboBox Style with left-aligned white text and placeholder support -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3a3a4e"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                        Focusable="false"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="{TemplateBinding BorderThickness}"
                                               CornerRadius="4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="32"/>
                                                </Grid.ColumnDefinitions>
                                                <Path Grid.Column="1"
                                                     Fill="White"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Data="M 0 0 L 4 4 L 8 0 Z"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Background" Value="#16213e"/>
                                        <Setter Property="BorderBrush" Value="#3a3a4e"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                            IsHitTestVisible="False"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                            Margin="10,0,32,0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"/>
                            <TextBlock x:Name="PlaceholderText"
                                       Margin="10,0,32,0"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Foreground="#6a6a7e"
                                       FontStyle="Italic"
                                       FontSize="14"
                                       Text="{TemplateBinding Tag}"
                                       IsHitTestVisible="False"
                                       Visibility="Collapsed"/>
                            <Popup x:Name="Popup"
                                 Placement="Bottom"
                                 IsOpen="{TemplateBinding IsDropDownOpen}"
                                 AllowsTransparency="True"
                                 Focusable="False"
                                 PopupAnimation="Slide">
                                <Grid x:Name="DropDown"
                                    SnapsToDevicePixels="True"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="200">
                                    <Border x:Name="DropDownBorder"
                                          Background="#16213e"
                                          BorderBrush="#3a3a4e"
                                          BorderThickness="2"
                                          CornerRadius="4"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="False">
                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95"/>
                            </Trigger>
                            <Trigger Property="SelectedItem" Value="{x:Null}">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="SelectedItem" Value="{x:Null}">
                    <Setter Property="Foreground" Value="#6a6a7e"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBoxItem Style with white text on highlight/selected -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="ItemBorder"
                               Background="{TemplateBinding Background}"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#e94560"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#e94560"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#e94560"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#e94560"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#d83551"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#a0a0b0"/>
            <Setter Property="BorderBrush" Value="#3a3a4e"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#e94560"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="End Game - Billing" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="White"
                      Margin="0,0,0,5"/>
            <TextBlock Text="Calculate charges and finalize the game session" 
                      FontSize="12" 
                      Foreground="#a0a0b0"/>
        </StackPanel>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Game Summary -->
                <Border Background="#16213e"
                       BorderBrush="#3a3a4e"
                       BorderThickness="2"
                       CornerRadius="6"
                       Padding="15"
                       Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Game Summary" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Frames Played:" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding FrameCount}" FontWeight="Bold"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Duration:" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DurationDisplay}" FontWeight="Bold"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Base Rate:" Margin="0,0,10,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding BaseRateDisplay}" FontWeight="Bold" Foreground="#4caf50"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Charges -->
                <TextBlock Text="Charges" FontWeight="Bold" Margin="0,10,0,5"/>
                
                <!-- Overtime -->
                <TextBlock Text="Overtime Minutes" Margin="0,0,0,5"/>
                <TextBox Text="{Binding OvertimeMinutes, UpdateSourceTrigger=PropertyChanged}" 
                        Margin="0,0,0,15"/>

                <!-- Overtime Amount -->
                <TextBlock Text="Overtime Amount (PKR)" Margin="0,0,0,5"/>
                <TextBox Text="{Binding OvertimeAmount, UpdateSourceTrigger=PropertyChanged}" 
                        Margin="0,0,0,15"/>

                <!-- Fine -->
                <TextBlock Text="Lump Sum Fine (PKR)" Margin="0,0,0,5"/>
                <TextBox Text="{Binding LumpSumFine, UpdateSourceTrigger=PropertyChanged}" 
                        Margin="0,0,0,15"/>

                <!-- Discount -->
                <TextBlock Text="Discount (PKR)" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Discount, UpdateSourceTrigger=PropertyChanged}" 
                        Margin="0,0,0,15"/>

                <!-- Total -->
                <Border Background="#16213e"
                       BorderBrush="#e94560"
                       BorderThickness="2"
                       CornerRadius="6"
                       Padding="15"
                       Margin="0,10,0,15">
                    <Grid>
                        <TextBlock Text="Total Amount:" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Text="{Binding TotalAmountDisplay}" 
                                  FontSize="20" 
                                  FontWeight="Bold" 
                                  Foreground="#4caf50"
                                  HorizontalAlignment="Right"/>
                    </Grid>
                </Border>

                <!-- Payer Mode -->
                <TextBlock Text="Who Pays?" FontWeight="Bold" Margin="0,10,0,5"/>
                <ComboBox ItemsSource="{Binding PayerModes}"
                         SelectedItem="{Binding SelectedPayerMode}"
                         DisplayMemberPath="Display"
                         SelectedValuePath="Value"
                         Margin="0,0,0,15"
                         Tag="Select Who Pays"/>

                <!-- Payment Status -->
                <TextBlock Text="Payment Status" FontWeight="Bold" Margin="0,10,0,5"/>
                <ComboBox ItemsSource="{Binding PayStatuses}"
                         SelectedItem="{Binding SelectedPayStatus}"
                         DisplayMemberPath="Display"
                         SelectedValuePath="Value"
                         Margin="0,0,0,15"
                         Tag="Select Payment Status"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                   Content="Cancel"
                   Style="{StaticResource SecondaryButton}"
                   Width="100"
                   Margin="0,0,10,0"
                   Click="Cancel_Click"/>

            <Button Grid.Column="2"
                   Content="End Game"
                   Style="{StaticResource PrimaryButton}"
                   Width="130"
                   Click="EndGame_Click"/>
        </Grid>
    </Grid>
</Window>
