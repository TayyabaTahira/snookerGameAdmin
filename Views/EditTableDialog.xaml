<Window x:Class="SnookerGameManagementSystem.Views.EditTableDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}"
        Height="350"
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#1a1a2e"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3a3a4e"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="45"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#4caf50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#2d2d3a"/>
                    <Setter Property="Foreground" Value="#666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#3a3a4e"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4a4a5e"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Table Name -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Table Name *"
                      FontSize="13"
                      FontWeight="SemiBold"
                      Foreground="#a0a0b0"
                      Margin="0,0,0,8"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                    MaxLength="50"/>
        </StackPanel>

        <!-- Active Status -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20" Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}">
            <CheckBox IsChecked="{Binding IsActive}"
                     Content="Active (Show on Dashboard)"
                     FontWeight="SemiBold"/>
            <TextBlock Text="Inactive tables will not appear on the dashboard"
                      FontSize="11"
                      Foreground="#808090"
                      Margin="25,5,0,0"/>
        </StackPanel>

        <!-- Required Fields Note -->
        <TextBlock Grid.Row="2"
                  Text="* Required fields"
                  FontSize="11"
                  Foreground="#808090"
                  Margin="0,0,0,10"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5"
                   Orientation="Horizontal"
                   HorizontalAlignment="Right"
                   Margin="0,20,0,0">
            <Button Content="Cancel"
                   Style="{StaticResource SecondaryButton}"
                   Width="100"
                   Click="Cancel_Click"
                   Margin="0,0,10,0"/>
            <Button Content="{Binding SaveButtonText}"
                   Style="{StaticResource PrimaryButton}"
                   Width="100"
                   Command="{Binding SaveCommand}"/>
        </StackPanel>
    </Grid>
</Window>
